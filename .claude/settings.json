{
    "permissions": {
        "allow": ["Read"],
        "deny": ["Read(.env)", "Read(.env.*)", "Write(config/settings_prod.py)", "Bash(rm -rf *)"]
    },
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run ruff check . && uv run ruff format .",
                        "statusMessage": "Running ruff..."
                    }
                ]
            }
        ]
    }
}