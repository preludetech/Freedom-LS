{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run ruff check . && uv run ruff format .",
                        "statusMessage": "Running ruff..."
                    }
                ]
            },
            {
                "matcher": "Skill",
                "hooks": [
                    {
                        "type": "command",
                        "command": "mkdir -p .claude/logs && echo \"$(date -Iseconds) $(jq -r '\\\"\\\\(.tool_input.skill)\\\"')\" >> .claude/logs/skill-usage.log",
                        "statusMessage": "Logging skill usage..."
                    }
                ]
            }
        ]
    }
}